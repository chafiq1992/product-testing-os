{
  "name": "Product Test Landing",
  "type": "page",
  "sections": {
    "hero": {
      "type": "section-image-banner",
      "settings": { "heading": "{{ page.title }}", "image_overlay_opacity": 10 }
    },
    "benefits": {
      "type": "section-rich-text",
      "blocks": [
        { "type": "heading", "settings": { "heading": "Why You'll Love It" } },
        { "type": "text", "settings": { "text": "{{ page.content }}" } }
      ],
      "block_order": ["0", "1"]
    },
    "cta": {
      "type": "section-rich-text",
      "blocks": [
        { "type": "buttons", "settings": { "button_label_1": "Buy Now", "button_link_1": "/cart" } }
      ],
      "block_order": ["0"]
    }
  },
  "order": ["hero", "benefits", "cta"]
}
